<Window x:Class="Prototipo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototipo"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1000">
    <Grid Margin="0,0,-120,-52">
        <Image Source="Images/proto1.jpg" 
               Stretch="Uniform" 
               Margin="-10,-8,-118,-19" 
               Opacity="0.75" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.064"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Button x:Name="boton_administrador" Content="Administrador"
        HorizontalAlignment="Left"
        Margin="140,0,0,0"
        VerticalAlignment="Center"
        Height="67"
        Width="296"
        Click="btn_administrador"
        FontFamily="Arial Rounded MT Bold"
        FontSize="18"
        Background="#FF282627"
        Foreground="White"
        BorderBrush="#FF707070"
        BorderThickness="1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="boton_usuario" Content="Usuario"
        HorizontalAlignment="Left"
        Margin="585,0,0,0"
        VerticalAlignment="Center"
        Height="67"
Width="296"
        Click="btn_usuario"
        FontFamily="Arial Rounded MT Bold"
        FontSize="18"
        Background="#FF282627"
        Foreground="White">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="1" Margin="417,271,0,0" Stroke="Black" VerticalAlignment="Top" Width="195" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="89.757"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>



    </Grid>
</Window>
