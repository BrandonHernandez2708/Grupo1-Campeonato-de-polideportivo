<UserControl x:Class="PoliDeportivo.Views.Administracion.CampeonatosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoliDeportivo.Views.Administracion"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100">
    <Grid Background="#FFA7A5A6" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Gestión de Campeonatos"
                   FontFamily="Arial Rounded MT Bold"
                   FontSize="40"
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>

        <!-- Formulario principal -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Background="#FF7B797A" Grid.Column="0" Margin="10">
                <TextBlock Foreground="Orange" Text="Nombre del campeonato" FontSize="20" Margin="0,0,0,5" FontFamily="Arial Rounded MT Bold"/>
                <TextBox Name="txtNombre" Height="30" Margin="2" Background="#FFF1F1F1" BorderBrush="#FF171517"/>
                <TextBlock Text="Fecha de inicio" FontSize="20" Margin="3,15,3,5" Foreground="Orange" FontFamily="Arial Rounded MT Bold" />
                <DatePicker x:Name="dpInicio" Margin="2" Background="#FFF1F1F1">
                    <DatePicker.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,1">
                            <GradientStop Color="#FFA3AEB9"/>
                            <GradientStop Color="#FF8399A9" Offset="0.375"/>
                            <GradientStop Color="#FF718597" Offset="0.375"/>
                            <GradientStop Color="#FFF1F1F1" Offset="1"/>
                        </LinearGradientBrush>
                    </DatePicker.BorderBrush>
                </DatePicker>

                <TextBlock Text="Fecha de fin" FontSize="20" Margin="3,15,3,5" Foreground="Orange" FontFamily="Arial Rounded MT Bold"/>
                <DatePicker x:Name="dpFin" Margin="2" Background="#FFF1F1F1"/>

                <TextBlock Text="Lugar" Foreground="Orange" FontSize="20" Margin="3,15,3,5" FontFamily="Arial Rounded MT Bold"/>
                <TextBox Name="txtLugar" Height="30" Margin="2" Background="#FFF1F1F1" BorderBrush="#FF171517"/>

                <TextBlock Text="Observaciones" FontSize="20" Margin="0,15,0,5" Foreground="Orange" FontFamily="Arial Rounded MT Bold"/>
                <TextBox Name="txtObservaciones" Margin="10,10,10,0" Height="72" TextWrapping="Wrap" AcceptsReturn="True" Background="#FFF1F1F1" BorderBrush="#FF171517"/>
            </StackPanel>

            <StackPanel Background="#FF7B797A" Grid.Column="1" Margin="10" >
                <TextBlock Foreground="Orange" Text="Deporte" FontSize="16" FontFamily="Arial Rounded MT Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="cmbDeporte" Margin="2">
                    <ComboBoxItem Content="Fútbol"/>
                    <ComboBoxItem Content="Baloncesto"/>
                    <ComboBoxItem Content="Béisbol"/>
                    <ComboBoxItem Content="Voleibol"/>
                    <ComboBoxItem Content="Tenis"/>
                </ComboBox>

                <TextBlock Foreground="Orange" Text="Modalidad" FontSize="16" FontFamily="Arial Rounded MT Bold" Margin="0,15,0,5"/>
                <ComboBox x:Name="cmbModalidad" Margin="2">
                    <ComboBoxItem Content="Eliminación directa"/>
                    <ComboBoxItem Content="Todos contra todos"/>
                </ComboBox>

                <TextBlock Foreground="Orange" Text="Estado" FontSize="16" FontFamily="Arial Rounded MT Bold" Margin="0,15,0,5"/>
                <ComboBox x:Name="cmbEstado" Margin="2">
                    <ComboBoxItem Content="Activo"/>
                    <ComboBoxItem Content="Finalizado"/>
                    <ComboBoxItem Content="Suspendido"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button Content="Guardar" Width="100" Margin="5" FontFamily="Arial Rounded MT Bold" Background="#FF282627" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Actualizar" Width="100" Margin="5" FontFamily="Arial Rounded MT Bold" Background="#FF282627" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Eliminar" Width="100" Margin="5" FontFamily="Arial Rounded MT Bold" Background="#FF282627" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Content="Limpiar" Width="100" Margin="5" FontFamily="Arial Rounded MT Bold" Background="#FF282627" Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>

    </Grid>
</UserControl>
