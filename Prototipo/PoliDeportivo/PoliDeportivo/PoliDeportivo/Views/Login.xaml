<Window x:Class="PoliDeportivo.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoliDeportivo"
        mc:Ignorable="d"
        Title="Login" Height="463" Width="1000" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Images/polideportivo.jpg" Height="463"/>
        <TextBlock Text="Iniciar Sesión" 
                   HorizontalAlignment="Left" 
                   Margin="592,23,0,0" 
                   VerticalAlignment="Top" 
                   Height="60" 
                   Width="336" 
                   FontFamily="Arial Rounded MT Bold"
                   FontSize="48">
        </TextBlock>

        <Border Background="#FFF1F1F1" 
                BorderBrush="Gray" 
                BorderThickness="1"
                CornerRadius="8"
                Margin="592,115,89,267">
            <TextBox Background="#FFF1F1F1"
                     BorderBrush="#FFF1F1F1"
                     x:Name="texto_loginNombre"
                     Text="Nombre"
                     FontSize="18"
                     TextChanged="txt_loginNombre" 
                     Margin="9,6,71,9">
            </TextBox>
        </Border>

        <Border Background="#FFF1F1F1" 
                BorderBrush="Gray" 
                BorderThickness="1"
                CornerRadius="8"
                Margin="592,198,89,184">
            <TextBox Background="#FFF1F1F1"
                     BorderBrush="#FFF1F1F1"
                     x:Name="texto_loginpassword"
                     Text="contraseña"
                     FontSize="18"
                     TextChanged="txt_loginPassword"
                     Margin="9,6,71,9">
            </TextBox>
        </Border>

        <Button x:Name="boton_iniciarSesion"
                Content="Iniciar Sesión"
                FontFamily="Arial Rounded MT Bold"
                Background="#FF282627"
                Foreground="White"
                BorderBrush="#FF707070"
                Margin="594,291,91,96"
                FontSize="18"
                Click="btn_IniciarSesion">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button x:Name="boton_regresar"
        Content="Regresar"
        FontFamily="Arial Rounded MT Bold"
        Background="#FF282627"
        Foreground="White"
        BorderBrush="#FF707070"
        Margin="594,366,91,21"
        FontSize="18"
        Click="btn_regresar">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Button.Resources>
        </Button>


    </Grid>
</Window>
