<Window x:Class="PoliDeportivo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoliDeportivo"
        mc:Ignorable="d"
        Title="MainWindow" Height="463" Width="1000" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Images/polideportivo.jpg" Height="463" Opacity="0.75"/>
        <Grid Height="200" Width="850">
            <Button Name="boton_usuario"
                    Content="Usuario"
                    Height="67"
                    Width="296"
                    FontFamily="Arial Rounded MT Bold"
                    FontSize="18"
                    Background="#FF282627"
                    Foreground="White" 
                    Margin="480,60,74,73" 
                    Click="btn_usuario">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"></Setter>
                    </Style>
                </Button.Resources>
                
            </Button>

            <Button Name="boton_administracion"
                    Content="administracion"
                    Height="67"
                    Width="296"
                    FontFamily="Arial Rounded MT Bold"
                    FontSize="18"
                    Background="#FF282627"
                    Foreground="White" Margin="64,60,490,73"
                    Click="btn_administracion">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="8"></Setter>
                    </Style>
                </Button.Resources>
            </Button>
            
        </Grid>
        


    </Grid>
</Window>
