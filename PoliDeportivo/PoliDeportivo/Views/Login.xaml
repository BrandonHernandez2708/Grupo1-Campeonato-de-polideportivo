<!-- graficos -->
<Window x:Class="PoliDeportivo.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PoliDeportivo"
        mc:Ignorable="d"
        Title="Login" Height="463" Width="1000" ResizeMode="NoResize">
	<Grid>
		<!-- Imagen de fondo -->
		<Image Source="/Images/polideportivo.jpg" Height="463" Stretch="Fill"/>

		<!-- Título -->
		<TextBlock Text="Iniciar Sesión"
                   HorizontalAlignment="Left"
                   Margin="592,23,0,0"
                   VerticalAlignment="Top"
                   Height="60"
                   Width="336"
                   FontFamily="Arial Rounded MT Bold"
                   FontSize="48"/>

		<!-- Campo Usuario -->
		<Border Background="#FFF1F1F1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="8"
                Margin="592,115,89,267">
			<TextBox Background="#FFF1F1F1"
                     BorderBrush="#FFF1F1F1"
                     x:Name="txtUsuario"
                     FontSize="18"
                     TextChanged="txt_loginNombre"
                     MaxLength="20"
                     TabIndex="0"
                     Margin="9,6,71,9"/>
		</Border>

		<!-- Campo Contraseña -->
		<Border Background="#FFF1F1F1"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="8"
                Margin="592,198,89,184">
			<PasswordBox Background="#FFF1F1F1"
                         BorderBrush="#FFF1F1F1"
                         x:Name="txtPassword"
                         FontSize="18"
                         PasswordChanged="txt_loginPassword"
                         MaxLength="20"
                         TabIndex="1"
                         Margin="9,6,71,9"/>
		</Border>

		<!-- Botón Iniciar Sesión -->
		<Button x:Name="btnIniciarSesion"
                Content="Iniciar Sesión"
                FontFamily="Arial Rounded MT Bold"
                Background="#FF282627"
                Foreground="White"
                BorderBrush="#FF707070"
                Margin="594,291,91,96"
                FontSize="18"
                TabIndex="2"
                Click="btn_IniciarSesion">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="8"/>
				</Style>
			</Button.Resources>
		</Button>

		<!-- Botón Regresar -->
		<Button x:Name="btnRegresar"
                Content="Regresar"
                FontFamily="Arial Rounded MT Bold"
                Background="#FF282627"
                Foreground="White"
                BorderBrush="#FF707070"
                Margin="594,366,91,21"
                FontSize="18"
                TabIndex="3"
                Click="btn_regresar">
			<Button.Resources>
				<Style TargetType="Border">
					<Setter Property="CornerRadius" Value="8"/>
				</Style>
			</Button.Resources>
		</Button>

	</Grid>
</Window>

