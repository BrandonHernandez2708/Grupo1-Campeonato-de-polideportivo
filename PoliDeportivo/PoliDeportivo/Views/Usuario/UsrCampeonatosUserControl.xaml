<UserControl x:Class="PoliDeportivo.Views.Usuario.UsrCampeonatosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoliDeportivo.Views.Usuario"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100">

    <Grid Background="#FFA7A5A6" Margin="10">
        <StackPanel>

            <TextBlock Text="Consulta de Campeonatos"
                       FontSize="40"
                       FontWeight="Bold"
                       Margin="10"
                       HorizontalAlignment="Center"/>

            <!-- Buscador -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox x:Name="txtBuscar"
                         Width="250"
                         Height="30"
                         FontSize="14"
                         Margin="0,0,10,0"
                         Text="Buscar campeonato..."
                         Foreground="Gray"
                         GotFocus="txtBuscar_GotFocus"
                         LostFocus="txtBuscar_LostFocus"/>
                <Button Content="Buscar"
                        Width="100"
                        Height="30"
                        Click="btn_buscar"/>
            </StackPanel>

            <!-- Tabla de resultados -->
            <DataGrid x:Name="dgCampeonatos"
                      AutoGenerateColumns="True"
                      Height="455"
                      Margin="10"
                      IsReadOnly="True"
                      Width="1016"/>
        </StackPanel>
    </Grid>
</UserControl>
