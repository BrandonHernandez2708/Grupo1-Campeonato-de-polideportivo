<UserControl x:Class="PoliDeportivo.Views.Usuario.UserPartidoUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoliDeportivo.Views.Usuario"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFA7A5A6" Margin="10">
        <StackPanel>

            <TextBlock Text="Consulta de Partidos"
                    FontSize="40"
                    FontWeight="Bold"
                    Margin="10"
                    HorizontalAlignment="Center"/>

            <!-- Buscador -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBox x:Name="txtBuscar"
                      Width="250"
                      Height="30"
                      FontSize="14"
                      Margin="0,0,10,0"
                      Text="Buscar campeonato..."
                      Foreground="Gray"
                      GotFocus="txtBuscar_GotFocus"
                      LostFocus="txtBuscar_LostFocus"/>

                <TextBlock Text="Fecha:"
                        VerticalAlignment="Center"
                        Margin="10,0,5,0"/>

                <DatePicker x:Name="dpFecha"
                         Width="150"
                         Height="30"
                         Margin="0,0,10,0"/>

                <Button Content="Buscar"
                     Width="100"
                     Height="30"
                     Click="btn_buscar"
                     FontSize="15"
                     Background="Orange"
                     Foreground="#FF282627"
                     FontFamily="Arial Rounded MT Bold">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

            <!-- Tabla de resultados -->
            <DataGrid x:Name="dgpartido"
                   AutoGenerateColumns="True"
                   Height="455"
                   Margin="10"
                   IsReadOnly="True"
                   Width="1016"/>
        </StackPanel>
    </Grid>
</UserControl>
