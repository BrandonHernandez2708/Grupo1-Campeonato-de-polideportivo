<UserControl x:Class="PoliDeportivo.Views.Usuario.UserEquiposUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoliDeportivo.Views.Usuario"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100">

    <Grid Background="#FFA7A5A6" Margin="10">
        <!-- Definición de filas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Título -->
            <RowDefinition Height="Auto"/>
            <!-- Buscador -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   FontSize="40"
                   FontWeight="Bold"
                   Margin="10"
                   HorizontalAlignment="Center">
            <Run Text="Consulta de "/>
            <Run Language="es-gt" Text="Equipos "/>
        </TextBlock>

        <!-- Buscador -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txtBuscar"
                     Width="250"
                     Height="30"
                     FontSize="14"
                     Margin="0,0,10,0"
                     Text="Buscar Equipo..."
                     Foreground="Gray"
                     GotFocus="txtBuscar_GotFocus"
                     LostFocus="txtBuscar_LostFocus"/>
            <Button Content="Buscar"
                    Width="100"
                    Height="30"
                    Click="btn_Buscar"/>
        </StackPanel>

        <!-- DataGrid con Scroll -->
        <DataGrid Grid.Row="2"
                  x:Name="dgEquipos"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  Margin="10"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"/>

    </Grid>
    
</UserControl>
