<UserControl x:Class="PoliDeportivo.Views.Administracion.AnotacionesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoliDeportivo.Views.Administracion"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1100">
    <Grid Background="#FFA7A5A6">

        <StackPanel Margin="10"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch">

            <TextBlock Text="Gestión de Anotaciones"
                       FontFamily="Arial Rounded MT Bold"
                       FontSize="40"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
                <StackPanel Background="#FF7B797A" Orientation="Horizontal"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left">

                    <StackPanel Margin="5">
                        <TextBlock Text="ID" Foreground="Orange" FontSize="16" FontFamily="Arial Rounded MT Bold"/>
                        <TextBox x:Name="txt_Anotacion_Id_pk" Width="100"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Minuto anotación" Foreground="Orange" FontSize="16" FontFamily="Arial Rounded MT Bold"/>
                        <TextBox x:Name="txt_Anotacion_Minuto" Width="150"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Descripción" Foreground="Orange" FontSize="16" FontFamily="Arial Rounded MT Bold"/>
                        <TextBox x:Name="txt_Anotacion_Descripcion" Width="130"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="ID partido" Foreground="Orange" FontSize="16" FontFamily="Arial Rounded MT Bold"/>
                        <TextBox x:Name="txt_Anotacion_partido_Id_fk" Width="130"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="ID jugador" Foreground="Orange" FontSize="16" FontFamily="Arial Rounded MT Bold"/>
                        <TextBox x:Name="txt_Anotacion_jugador_Id_fk" Width="150"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left">
                <Button x:Name="boton_newanot" 
                        FontSize="15"
                        Background="Orange"
                        Foreground="#FF282627"
                        FontFamily="Arial Rounded MT Bold"
                        Content="Nuevo"
                        Click="btn_newanot"
                        Margin="5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="boton_anot_guardar"
                        FontSize="15"
                        Background="#FF282627"
                        Foreground="White"
                        FontFamily="Arial Rounded MT Bold"
                        Content="Guardar"
                        Click="btn_anot_guardar"
                        Margin="5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="boton_anot_actualizar" 
                        FontSize="15"
                        Background="#FF282627"
                        Foreground="White"
                        FontFamily="Arial Rounded MT Bold"
                        Content="Actualizar"
                        Click="btn_anot_actualizar"
                        Margin="5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="boton_anot_eliminar"
                        FontSize="15"
                        Background="#FF282627"
                        Foreground="White"
                        FontFamily="Arial Rounded MT Bold"
                        Content="Eliminar"
                        Click="btn_anot_eliminar"
                        Margin="5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btn_ayuda"
                        FontSize="15"
                        Background="#FF607D8B"
                        Foreground="White"
                        FontFamily="Arial Rounded MT Bold"
                        Content="Ayuda"
                        Click="btn_ayuda_anotaciones"
                        Margin="5">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>

            <DataGrid Background="#FFF1F1F1"  x:Name="DTGV_anotacion"
                      AutoGenerateColumns="True"
                      Height="407"
                      SelectionChanged="DTGV_anotacion_SelectionChanged"/>

        </StackPanel>

    </Grid>
</UserControl>