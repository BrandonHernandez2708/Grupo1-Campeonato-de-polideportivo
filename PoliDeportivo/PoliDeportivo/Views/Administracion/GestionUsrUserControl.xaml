<UserControl x:Class="PoliDeportivo.Views.Administracion.GestionUsrUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PoliDeportivo.Views.Administracion"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FFA7A5A6" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="txtIdUsuario" Text="ID Usuario" Margin="0,5"/>
            <TextBox x:Name="txtEmpleado" Text="Empleado" Margin="0,5"/>
            <TextBox x:Name="txtCorreo" Text="Correo" Margin="0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5"/>
            <DatePicker x:Name="dpFecha" Margin="0,5"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Button Content="Guardar" Click="btn_guardar" Margin="5"/>
            <Button Content="Actualizar" Click="btn_actualizar" Margin="5"/>
            <Button Content="Eliminar" Click="btn_eliminar" Margin="5"/>
            <Button Content="Limpiar" Click="btn_limpiar" Margin="5"/>
        </StackPanel>

        <DataGrid x:Name="dgUsuarios" Grid.Row="2" AutoGenerateColumns="False" Margin="0,10,0,0"
                  SelectionMode="Single" SelectionChanged="dgUsuarios_SelectionChanged" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Usuario" Binding="{Binding IdUsuario}" Width="*"/>
                <DataGridTextColumn Header="Empleado" Binding="{Binding Empleado}" Width="*"/>
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="*"/>
                <DataGridTextColumn Header="Contraseña" Binding="{Binding Password}" Width="*"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
