<Window x:Class="Prototipo.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prototipo"
        mc:Ignorable="d"
        Title="MenuPrincipal" Height="630" Width="1100">
    <Grid Background="#FFA7A5A6">

        <!-- Menú lateral completo -->
        <Grid Width="200" HorizontalAlignment="Left" Background="#FF171517">
            <!-- Fondo del menú -->
            <Rectangle Stroke="#FF282627" Fill="#FF171517" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Título del menú -->
            <Label Content="Polideportivo"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"
                   Height="66"
                   FontFamily="Arial Rounded MT Bold"
                   FontSize="24"
                   Foreground="White"
                   Background="#FF131113"
                   HorizontalContentAlignment="Center"/>

            <StackPanel x:Name="panelUsuario" HorizontalAlignment="Center" Width="200" Margin="0,66,0,0">
                <Button x:Name="boton_despliegueUsuario"
                        Content="☰ Usuario"
                        Click="btn_despliegueUsr"
                        Width="200"
                        Height="44"
                        BorderBrush="#FF171517"
                        Background="#FF171517"
                        Foreground="White"/>

                <Border x:Name="borderUsuarioMenu"
                        Background="#FF282627"
                        RenderTransformOrigin="0.5,0">
                    <Border.RenderTransform>
                        <ScaleTransform x:Name="MenuUsuariosScale" ScaleY="0"/>
                    </Border.RenderTransform>

                    <StackPanel x:Name="MenuUsuarioPanel">
                        <Button x:Name="Btn_calendario" Content="Calendario" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                        <Button x:Name="Btn_tablaPosicion" Content="Tabla de Posiciones" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                        <Button x:Name="Btn_estadistica" Content="Estadisticas" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                        <Button x:Name="Btn_campeonatos" Content="Campeonatos" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                        <Button x:Name="BtnC" Content="Reglas de juego" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Button x:Name="boton_despliegueAdmin"
                    Content="☰ Administración"
                    Click="btn_despliegueAdmin"
                    Width="200"
                    Height="44"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,110,0,0"
                    BorderBrush="#FF171517"
                    Background="#FF171517"
                    Foreground="White"/>

            <Border x:Name="borderAdminMenu" >
                <Border.RenderTransform>
                    <ScaleTransform x:Name="MenuAdminScale" ScaleY="0"/>
                </Border.RenderTransform>

                <StackPanel x:Name="MenuAdminPanel">
                    <Button x:Name="BtnCampeonatos" Content="Campeonatos" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    <Button x:Name="BtnEquipos" Content="Equipos" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    <Button x:Name="BtnJugadores" Content="Jugadores/entrenadores" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    <Button x:Name="BtnJornadas" Content="Jornadas/Partidos" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    <Button x:Name="BtnReglas" Content="Reglas de Juego" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    <Button x:Name="BtnEmpleados" Content="Empleados" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    <Button x:Name="BtnEstadisticas" Content="Estadísticas/Reportes" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                    <Button x:Name="BtngestionUsr" Content="Gestion de usuarios" Width="200" Height="44" Background="#FF282627" Foreground="White"/>
                </StackPanel>
            </Border>

            <Button x:Name="btn_cerrarSesion" Content="Cerra Sesión" HorizontalAlignment="Left" Margin="10,556,0,0" VerticalAlignment="Top" Height="22" Width="80" Foreground="White" Background="#FF151715" BorderBrush="#FF151715"/>
        </Grid>



    </Grid>
</Window>
